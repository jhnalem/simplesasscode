<div class="row">
  <div class="col-md-4 col-lg-offset-3">
      <% if params[:plan]=='2'%>
         <h1 class="text-center">Pro Account</h1>
         <p>Sign up for free and get basic access for the community!</p>
      <%else%>
         <h1 class="text-center">Basic Account</h1>
         <p>Sign up for Pro the account for 10/month and get access to the community and contact information! </p>
      <%end%>
   </div>
  <div class="col-md-4 col-lg-offset-3 well">
    
        <h2>Sign up</h2>
      <% if params[:plan] == "2"%>  
        <%=render "basic_form"%>
      <%else%>
        <%=render "pro_form"%>
      <%end%>
       <%= render "devise/shared/links"%>

    </div>
</div>
